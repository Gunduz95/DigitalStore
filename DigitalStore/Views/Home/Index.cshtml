@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<DigitalStore.Models.Product>


@foreach (var product in Model)
{
<div class="row">
    <div class="col-md-3">
        <img class="img-thumbnail" width="150" height="150"
             @*src=@Url.Action("Products", "GetImage", new { Model.Id }) />*@
             src='@Url.RouteUrl(new { controller = "Products", action = "GetImage", productId = product.Id })' />
    </div>
    <div class="col-md-5">
        @Html.DisplayFor(modelItem => product.Name)
    </div>
    <div class="col-md-5">
        @Html.DisplayFor(modelItem => product.Description)
    </div>
    <div class="col-md-5">
        @Html.DisplayFor(modelItem => product.Price)
    </div>
</div>
}
